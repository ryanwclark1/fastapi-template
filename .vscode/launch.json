{
  "version": "0.2.0",
  "configurations": [
    // ═══════════════════════════════════════════════════════
    // FastAPI Service
    // ═══════════════════════════════════════════════════════
    {
      "name": "Launch: FastAPI",
      "type": "debugpy",
      "request": "launch",
      "python": "${workspaceFolder}/.venv/bin/python",
      "module": "uvicorn",
      "args": [
        "example_service.app.main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--reload"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "envFile": "${workspaceFolder}/.env",
      "preLaunchTask": "Infra: Docker Compose Up"
    },
    {
      "name": "Launch: FastAPI (Debug Mode)",
      "type": "debugpy",
      "request": "launch",
      "python": "${workspaceFolder}/.venv/bin/python",
      "module": "uvicorn",
      "args": [
        "example_service.app.main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--reload",
        "--log-level",
        "debug"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "APP_DEBUG": "true",
        "APP_LOG_LEVEL": "DEBUG"
      },
      "envFile": "${workspaceFolder}/.env",
      "preLaunchTask": "Infra: Docker Compose Up"
    },
    {
      "name": "Launch: FastAPI (No Infra)",
      "type": "debugpy",
      "request": "launch",
      "python": "${workspaceFolder}/.venv/bin/python",
      "module": "uvicorn",
      "args": [
        "example_service.app.main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--reload"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Attach: FastAPI",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/app"
        }
      ]
    },
    // ═══════════════════════════════════════════════════════
    // Background Worker (Taskiq)
    // ═══════════════════════════════════════════════════════
    {
      "name": "Worker: Taskiq",
      "type": "debugpy",
      "request": "launch",
      "python": "${workspaceFolder}/.venv/bin/python",
      "module": "taskiq",
      "args": [
        "worker",
        "example_service.tasks.broker:broker"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "envFile": "${workspaceFolder}/.env",
      "preLaunchTask": "Infra: Docker Compose Up"
    },
    // ═══════════════════════════════════════════════════════
    // Testing
    // ═══════════════════════════════════════════════════════
    {
      "name": "Test: All",
      "type": "debugpy",
      "request": "launch",
      "python": "${workspaceFolder}/.venv/bin/python",
      "module": "pytest",
      "args": [
        "tests",
        "-v"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Test: Current File",
      "type": "debugpy",
      "request": "launch",
      "python": "${workspaceFolder}/.venv/bin/python",
      "module": "pytest",
      "args": [
        "${file}",
        "-v",
        "--tb=short"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "PYTEST_CURRENT_TEST": ""
      },
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Test: Unit",
      "type": "debugpy",
      "request": "launch",
      "python": "${workspaceFolder}/.venv/bin/python",
      "module": "pytest",
      "args": [
        "-m",
        "unit",
        "-v",
        "tests"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Test: Integration",
      "type": "debugpy",
      "request": "launch",
      "python": "${workspaceFolder}/.venv/bin/python",
      "module": "pytest",
      "args": [
        "-m",
        "integration",
        "-v",
        "tests"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "envFile": "${workspaceFolder}/.env"
    },
    // ═══════════════════════════════════════════════════════
    // Alembic Migrations
    // ═══════════════════════════════════════════════════════
    {
      "name": "Alembic: Upgrade Head",
      "type": "debugpy",
      "request": "launch",
      "python": "${workspaceFolder}/.venv/bin/python",
      "module": "alembic",
      "args": [
        "upgrade",
        "head"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Alembic: Downgrade -1",
      "type": "debugpy",
      "request": "launch",
      "python": "${workspaceFolder}/.venv/bin/python",
      "module": "alembic",
      "args": [
        "downgrade",
        "-1"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "envFile": "${workspaceFolder}/.env"
    }
  ],
  "compounds": [
    {
      "name": "Compound: FastAPI + Worker",
      "configurations": [
        "Launch: FastAPI",
        "Worker: Taskiq"
      ],
      "preLaunchTask": "Infra: Docker Compose Up",
      "stopAll": true,
      "presentation": {
        "group": "fullstack",
        "order": 1
      }
    },
    {
      "name": "Compound: Full Stack (Debug)",
      "configurations": [
        "Launch: FastAPI (Debug Mode)",
        "Worker: Taskiq"
      ],
      "preLaunchTask": "Infra: Docker Compose Up",
      "stopAll": true,
      "postDebugTask": "Infra: Docker Compose Down",
      "presentation": {
        "group": "fullstack",
        "order": 2
      }
    }
  ]
}
